{
  "name": "distributed",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/distributed/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/distributed/test/jest-e2e.json",
    "typedoc": "npx typedoc",
    "preinstall": "[[ $CI != true ]] && . ~/.nvm/nvm.sh && nvm use || true",
    "prepare": "husky",
    "compose": "docker compose -f compose.yml up -d",
    "compose-down": "docker compose -f compose.yml down"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
