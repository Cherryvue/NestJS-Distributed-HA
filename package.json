    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/client": "^7.2.0",
    "@react-email/components": "^1.0.2",
    "@tanstack/react-table": "^8.21.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "ampq": "^2019.5.11",
    "amqplib": "^0.10.9",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dayjs": "^1.11.19",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "short-uuid": "^6.0.3",
    "supertokens-node": "^24.0.0",
    "ts-node-dev": "^2.0.0",
    "type-fest": "^5.3.1",
    "unique-names-generator": "^4.7.1",
    "uuid": "^13.0.0"
